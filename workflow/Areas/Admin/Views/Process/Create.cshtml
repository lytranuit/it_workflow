@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<div class="row clearfix">
    <div class="col-12">
        <div class="d-inline-block w-100">
            <span class="page-title">Tạo quy trình</span>
            <button type="submit" class="btn btn-sm btn-primary float-right">Lưu lại</button>
            <button type="submit" class="btn btn-sm float-right mr-2">Hủy bỏ</button>
        </div>
    </div>
    <div class="col-12 pt-4">
        <form method="POST" id="form-dang-tin" autocomplete="on" class="row">
            <div class="col-md-3">
                <section class="card card-fluid">
                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-lg-12 mt-2">
                                <b class="col-form-label">Tên quy trình:<span class="text-danger">*</span></b>
                                <div class="pt-1">
                                    <input class="form-control form-control-sm" type='text' name="name" required="" placeholder="Tên" autocomplete="off" />
                                </div>
                            </div>
                            <div class="col-lg-12 mt-2">
                                <b class="col-form-label">Nhóm quy trình:<span class="text-danger">*</span></b>
                                <div class="pt-1">
                                </div>
                            </div>
                            <div class="col-lg-12 mt-2">
                                <b class="col-form-label">Các bước thực hiện:<span class="text-danger">*</span></b>
                                <div class="pt-1">
                                </div>
                            </div>
                            <div class="col-lg-12 mt-2">
                                <b class="col-form-label">Ghi chú:</b>
                                <div class="pt-1">
                                    <textarea name="description" class="form-control form-control-sm"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            <div class="col-md-6">
                <section class="card card-fluid">
                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-lg-12 mt-2">
                                <b class="col-form-label">Tên quy trình:<span class="text-danger">*</span></b>
                                <div class="pt-1">
                                    <input class="form-control form-control-sm" type='text' name="name" required="" placeholder="Tên" autocomplete="off" />
                                </div>
                            </div>
                            <div class="col-lg-12 mt-2">
                                <b class="col-form-label">Nhóm quy trình:<span class="text-danger">*</span></b>
                                <div class="pt-1">
                                </div>
                            </div>

                        </div>
                    </div>
                </section>
            </div>
            <div class="col-md-3">
                <section class="card card-fluid">
                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-lg-12 mt-2">
                                <b class="col-form-label">Tên quy trình:<span class="text-danger">*</span></b>
                                <div class="pt-1">
                                    <input class="form-control form-control-sm" type='text' name="name" required="" placeholder="Tên" autocomplete="off" />
                                </div>
                            </div>
                            <div class="col-lg-12 mt-2">
                                <b class="col-form-label">Nhóm quy trình:<span class="text-danger">*</span></b>
                                <div class="pt-1">
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
