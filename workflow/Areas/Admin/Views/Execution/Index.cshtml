@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="row clearfix">
    <div class="col-12">
        <section class="card card-fluid">
            <div class="card-body">
                <div class="table-responsive-md">
                    <table id="quanlytin" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tiêu đề</th>
                                <th>Quy trình</th>
                                <th>Người tạo</th>
                                <th>Ngày tạo</th>
                                <th>Trạng thái</th>
                                <th>Tiến trình</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </section>

        <div id="conta" style='position: relative; margin:0 auto;'></div>
    </div>
</div>

@section Scripts{
    <script type='text/javascript'>
        $(document).ready(function () {
            let table = $('#quanlytin').DataTable({
                "stateSave": true,
                "processing": true,
                "serverSide": true,
                // "ordering": false,
                "ajax": {
                    "url": "/admin/execution/table",
                    "dataType": "json",
                    "type": "POST",
                    'data': function (data) {
                    }
                },
                "fnDrawCallback": function (oSettings) {
                    //$("#quanlytin").closest(".col-sm-12").removeClass("col-sm-12");
                    $("[data-toggle='tooltip']").tooltip();
                },
                "columns": [{
                    "data": "id",
                }, {
                    "data": "title",
                    "width": "500px",
                    "orderable": false
                }, {
                    "data": "process",
                    "orderable": false,
                    "className": "text-center"
                }, {
                    "data": "user_create",
                    "orderable": false,
                    "className": "text-center"
                }, {
                    "data": "date_create",
                    "orderable": false,
                    "className": "text-center"
                }, {
                    "data": "status",
                    "orderable": false,
                    "className": "text-center"
                }, {
                    "data": "progress",
                    "orderable": false,
                    "className": "text-center"
                },
                {
                    "data": "action",
                    "orderable": false,
                    "className": "text-center"
                }
                ],
            });
        });
    </script>
}