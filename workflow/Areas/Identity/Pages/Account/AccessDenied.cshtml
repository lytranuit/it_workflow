@page
@model AccessDeniedModel

@{
	Layout = null;
	ViewData["Title"] = "Không có quyền";
}
<!doctype html>
<html lang="en">

<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<link rel="shortcut icon" type="image/x-icon" href="/images/favicon.png" />

	<!--- FONTS -->
	<link rel="stylesheet" id="font-css" href="https://fonts.googleapis.com/css?family=Arimo%3A400%2C500%2C600%2C400i%2C700&amp;display=swap&amp;ver=5.7.6" type="text/css" media="all">
	<link href="/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
	<link href="/css/style.min.css" rel="stylesheet" type="text/css" />

	<title>@ViewData["Title"]</title>
	<!------ Include the above in your HEAD tag ---------->
	<style>
		.login-block {
			background-image: url(/images/bg.jpg);
			background-size: cover;
			background-position: center center;
			width: 100%;
			height: 100vh;
		}
	</style>
</head>

<body class="account-body accountbg">
	<section class="login-block">
		<div class="container">
			<div class="row align-items-start" style="height: 100vh;">
				<div class="col-12 align-self-center">
					<div class="auth-page">
						<div class="card auth-card shadow-lg">
							<div class="card-body">
								<div class="px-3">
									<div class="auth-logo-box" style="top:-70px;">
										<a href="#" class=""><img src="/images/PMP_Stada_Group.png" width="300" alt="logo" class=""></a>
									</div><!--end auth-logo-box-->
									<img src="/images/500.jpg" alt="" class="d-block mx-auto mt-4" height="250">
									<div class="text-center auth-logo-text mb-4">
										<h4 class="mt-0 mb-3 mt-5">Không có quyền truy cập</h4>
										<div class="text-center">
											<form method="post" action="/V1/Auth/Logout">
												<button class="btn btn-sm btn-danger text-white" type="submit">Đăng xuất</button>
											</form>
										</div>
									</div> <!--end auth-logo-text-->
								</div><!--end /div-->
							</div><!--end card-body-->
						</div><!--end card-->
					</div><!--end auth-page-->
				</div><!--end col-->

			</div>

		</div>
	</section>
</body>
</html>